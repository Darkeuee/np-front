@Library('shared-library') _

def customStages = [
    CustomStage: [
        customStep1: [
            command: "echo 'This is a custom step'"
        ],
        customStep2: [
            groovyScript: '''
                def result = "Custom result"
                echo "This is a custom Groovy script: ${result}"
            '''
        ]
    ]
]

pipeline {
    agent any

    stages {
        stage('Default Pipeline') {
            steps {
                script {
                    advancedPipeline([:])
                }
            }
        }

        stage('Debug Pipeline') {
            steps {
                script {
                    advancedPipeline([DEBUG_MODE: true])
                }
            }
        }

        stage('Custom Stages Pipeline') {
            steps {
                script {
                    advancedPipeline([stages: customStages])
                }
            }
        }

        stage('Combined Stages Pipeline') {
            steps {
                script {
                    advancedPipeline([
                        stages: customStages,
                        appendStages: true
                    ])
                }
            }
        }

        stage('Failing Pipeline') {
            steps {
                script {
                    try {
                        advancedPipeline([
                            stages: [
                                FailingStage: [
                                    failingStep: [
                                        command: "echo 'This step will fail'",
                                        failPipeline: true,
                                        groovyScript: '''
                                            throw new Exception("Simulated failure")
                                        '''
                                    ]
                                ]
                            ]
                        ])
                    } catch (Exception e) {
                        echo "Caught expected exception: ${e.message}"
                    }
                }
            }
        }
    }
}